<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
    Реализация с только фигуой
    <item
         android:id="@android:id/background"
         android:drawable="@drawable/ic_flash_empty" />

     <item android:id="@android:id/progress">
         <clip
             android:clipOrientation="vertical"
             android:drawable="@drawable/ic_flash_full"
             android:gravity="bottom" />
     </item>
      -->

    <!-- Реализация разукрашенной фигуры с чёрной обводкой
     и слегка скругленными краями с фигурой поверх  -->

       <item>
          <shape>
              <corners android:radius="7dp" />

              <solid android:color="#FFFFFF" />

              <stroke
                  android:width="1dp"
                  android:color="#000000" />
          </shape>
      </item>

      <item>
          <clip
              android:clipOrientation="vertical"
              android:gravity="bottom">
              <shape>
                  <corners android:radius="7dp" />

                  <solid android:color="@color/red" />

                  <stroke
                      android:width="1dp"
                      android:color="#000000" />
              </shape>
          </clip>
      </item>

    <item android:drawable="@drawable/ic_flash_full" />

 </layer-list>